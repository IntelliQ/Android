<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/queueDetailBar"
    android:elevation="2dp"
    android:background="@color/primary"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/queueDetailBarLeft"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/queueDetailBarValueLeft"
            android:text="123"
            android:textSize="40sp"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-light"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/queueDetailBarDescriptionLeft"
            android:text="@string/queue_estimation_people"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_below="@id/queueDetailBarValueLeft"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/queueDetailBarRight"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/queueDetailBarValueRight"
            android:text="45"
            android:textSize="40sp"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-light"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/queueDetailBarDescriptionRight"
            android:text="@string/queue_estimation_time"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:layout_below="@id/queueDetailBarValueRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>